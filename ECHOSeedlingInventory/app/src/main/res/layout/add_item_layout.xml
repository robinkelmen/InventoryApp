<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editText"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="e.g. Moringa"
        android:textColor="@color/hint_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:text="@string/enter_name"
        android:textColor="@color/field_text"
        android:textSize="@dimen/field_title_size" />

    <EditText
        android:id="@+id/language_field"
        android:layout_width="189dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"

        android:layout_marginEnd="30dp"
        android:layout_marginBottom="520dp"
        android:layout_toStartOf="@+id/other_name_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="e.g. Swahili"
        android:textColor="@color/hint_text" />

    <EditText
        android:id="@+id/other_name_field"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="521dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="e.g. Mapera"
        android:inputType="textPersonName"
        android:textColor="@color/hint_text" />

    <TextView
        android:id="@+id/name_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="132dp"
        android:text="Language"
        android:textColor="@color/field_text"
        android:textSize="@dimen/field_title_size" />

    <TextView
        android:id="@+id/name_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="121dp"
        android:text="Item Name"
        android:textColor="@color/field_text"
        android:textSize="@dimen/field_title_size" />

    <Button
        android:id="@+id/add_other_name"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="-12dp"
        android:drawableTop="@drawable/ic_add_box"
        android:text="add name"
        android:textSize="10dp" />



    <TextView
        android:id="@+id/select_tags"
        android:layout_width="180dp"
        android:layout_height="46dp"

        android:layout_below="@+id/price"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-19dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="332dp"
        android:text="Select Tags"
        android:textColor="@color/field_text"
        android:textSize="@dimen/field_title_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/submit_new_item"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="133dp" />


    <Button
        android:id="@+id/cancel_new_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/cancel_color"
        android:text="cancel" />

    <EditText
        android:id="@+id/price"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/too_low"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="293dp"
        android:text="Price" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="134dp"
        android:text="Low Amount" />

    <Button
        android:id="@+id/submit_new_item"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_above="@id/cancel_new_item"
        android:layout_alignParentStart="true"
        android:layout_marginTop="615dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/cardview_light_background"
        android:text="submit" />


</RelativeLayout>